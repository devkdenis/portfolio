---
import Layout from '../layout/Layout.astro';
import UpdatesMd, { frontmatter as updatesFrontmatter } from '../content/updates.md';

// Define Update type
type Update = {
  date: string;
  title: string;
  description: string;
  selectprojects: string;
};

// Cast frontmatter.updates to a typed array
const updates: Update[] = updatesFrontmatter.updates as Update[];
---

<Layout>
  <!-- Page header -->
  <h1 class="mb-6">Updates</h1>

  <!-- Updates list -->
  <section class="section_updates">
    <ul>
      {updates.map((u) => (
        <li>
          <h4>{u.date}</h4>
          <h3 set:html={u.title} />
          <h5 set:html={u.description} />
          <h5 set:html={u.selectprojects} />
        </li>
      ))}
    </ul>

    <!-- “.” link resolves to base URL -->
    <a href="." class="button">
      ← Return Home
    </a>
  </section>
</Layout>
